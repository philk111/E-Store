      <g><rect y="93.3" width="302" height="26.3"/></g>
      <g><rect y="186.7" width="302" height="26.3"/></g>
    </svg>
  </div>
  <div class="menu-right"></div>
</header>

<nav class="drawermenu">
  <ul>
    <li><a href="/web/admin.php/main">HOME</a></li>
    <li>
      <a href="#">CATEGORIES</a>
      <ul>
        {% for category in categoryList %}  
        <li><a href="/web/admin.php/category/{{category.categoryID}}">{{ category.name }}</a></li>
        {% else %}
        <li>no categories</li>
      {% endfor %}
      </ul>
    </li>
    <li><a href="/web/admin.php/login">LOG IN</a></li>
    <li><a href="/web/admin.php/cart">CART</a></li>
  </ul>
</nav>
      
<div class="pageWrapper">
    <div class="headerWrapper"> 
   
    <a href ="/web/admin.php/main"> <img src="{{logoPath}}" alt="logo" height="100" width="150"></a> 
    
    {% if user == 'administrator' %}
        <a href="/web/admin.php/logout/" class="logOut"> LOG OUT </a>
        <span style="font-size:16px; position:relative; left:-85px;"><p style="display:inline;">PRODUCT:&emsp;&emsp;&emsp;&emsp; <a href ="/web/admin.php/product/add/">ADD</a>&emsp; <a href ="/web/admin.php/product/delete/1">DELETE</a>&emsp; <a href ="/web/admin.php/product/edit/1">EDIT</a>&emsp; <a href ="/web/admin.php/product/list/">LIST</a>&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;
            CATEGORY:&emsp;&emsp;&emsp;&emsp; <a href ="/web/admin.php/category/add/">ADD</a>&emsp; <a href ="/web/admin.php/category/delete/1">DELETE</a>&emsp; <a href ="/web/admin.php/category/edit/1">EDIT</a>&emsp; <a href ="/web/admin.php/category/list">LIST</a></p></span>
    {% endif %}
    
    
    
    </div>
<div class="mainContent">
{% block mainContent %}


  {% endblock %}
</div> 
</div>
<div class="drawermenu-overlay">
</div>

<script type="text/javascript">
$(document).ready(function() {
  $('.drawermenu').drawermenu({
    speed:100,
    position:'left'
  });
});

$('.picHover').hover(function(){
    $(this).css({width:"60%",height:"60%"});
},function(){
    $(this).css({width:"40%",height:"40%"});   
}); 

$(".pricePerItem").load("hello");

</script>
</body>
</html>
